<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PreLobbyController">
   <children>
      <ImageView>
         <image>
            <Image url="@../images/bg.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="720.0" fitWidth="593.0" layoutX="-31.0" layoutY="-33.0">
         <image>
            <Image url="@../images/note.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="106.0" fitWidth="232.0" layoutX="150.0" layoutY="400.0">
         <image>
            <Image url="@../images/button_join.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="106.0" fitWidth="232.0" layoutX="150.0" layoutY="300.0">
         <image>
            <Image url="@../images/button_create.png" />
         </image>
      </ImageView>
      <TextField fx:id="usernameField" alignment="CENTER" layoutX="168.0" layoutY="229.0" prefHeight="39.0" prefWidth="204.0" promptText="Username...">
         <font>
            <Font name="Rockwell" size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Text layoutX="159.0" layoutY="189.0" strokeType="OUTSIDE" strokeWidth="0.0" text="USERNAME:">
         <font>
            <Font name="Rockwell" size="38.0" />
         </font>
      </Text>
      <Button fx:id="createButton" alignment="CENTER" layoutX="168.0" layoutY="314.0" mnemonicParsing="false" onAction="#switchToCreatedLobby" opacity="0.01" prefHeight="79.0" prefWidth="204.0" text="Create" textAlignment="CENTER">
         <effect>
            <Shadow />
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="joinButton" alignment="CENTER" layoutX="168.0" layoutY="414.0" mnemonicParsing="false" onAction="#switchToJoinedLobby" opacity="0.01" prefHeight="79.0" prefWidth="204.0" text="Join" textAlignment="CENTER">
         <effect>
            <Shadow />
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
