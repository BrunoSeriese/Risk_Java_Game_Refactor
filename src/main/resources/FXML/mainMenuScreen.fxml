<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainMenuController">
   <children>

      <ImageView>
         <Image url="@../images/bg.jpg" />
      </ImageView>
      <ImageView fitHeight="136.0" fitWidth="285.0" layoutX="100.0" layoutY="100.0">
         <image>
            <Image url="@../images/button_play.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="136.0" fitWidth="285.0" layoutX="100.0" layoutY="250.0">
         <image>
            <Image url="@../images/rules_button.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="136.0" fitWidth="285.0" layoutX="100.0" layoutY="400.0">
         <image>
            <Image url="@../images/button_quit.png" />
         </image>
      </ImageView>

      <Button fx:id="playGame" alignment="CENTER" layoutX="125.0" layoutY="116.0" mnemonicParsing="false" onAction="#switchToLobby" opacity="0.01" prefHeight="104.0" prefWidth="249.0" text="Play" textAlignment="CENTER">
         <effect>
            <Shadow />
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>

      <Button fx:id="showRules" alignment="CENTER" layoutX="125.0" layoutY="265.0" mnemonicParsing="false" onAction="#openRuleSet"  opacity="0.01" prefHeight="104.0" prefWidth="249.0" text="Rules" textAlignment="CENTER">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Shadow />
         </effect>
      </Button>
      <Button fx:id="quitGame" alignment="CENTER" layoutX="125.0" layoutY="416.0" mnemonicParsing="false"  opacity="0.01" prefHeight="104.0" prefWidth="249.0" text="Quit" textAlignment="CENTER" onAction="#quitProgram">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Shadow />
         </effect>
      </Button>
   </children>
</AnchorPane>
